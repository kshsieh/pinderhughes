= render 'shared/head'
%body 
  %nav.top-bar(data-topbar)
    %ul.title-area 
      %li.name
        %h1 
          =link_to 'Pinderhughes(Admin)', admin_path
    %section.top-bar-section 
      %ul.left 
        %li=link_to 'Music', admin_tracks_path
        %li=link_to 'Videos', admin_videos_path
        %li=link_to 'Blog Posts', admin_blogs_path
        %li=link_to 'Events', admin_events_path
      %ul.right 
        %li.has-dropdown
          =link_to 'My Profile', admin_user_path(id: current_user)
          %ul.dropdown
            %li=link_to 'Social', admin_social_media_sites_path
        %li=link_to 'Log Out', destroy_user_session_path, method: :delete
  .row= render 'layouts/flash_messages'
  = yield
  = javascript_include_tag "application"
  = debug(params) if Rails.env.development?